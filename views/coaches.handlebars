<h1>2016-2017 NBA Coaches</h1>
<!-- form to add new data to database -->
<form id="addcoach" action="/coaches" method="post">
<fieldset>
  <legend>Enter Coach Info</legend>
    First Name: <input type="text" name="fname"><br>
    Last Name: <input type="text" name="lname"><br>
    Team: <select name="team_id" id="team-selector">
        {{#each teams}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Age: <input type="number" name="age"><br>
    Years Experience As NBA Head Coach: <input type="number" name="years"><br>
    <input type="submit" value="Submit">
</fieldset>
</form><br>

<!-- table to display data from database -->
<div id="coach-table">
  <table>
      <thead>
          <th>Name</th>
          <th>Team</th>
          <th>Age</th>
          <th>Experience (years)</th>
          <th>Delete Data</th>
          <th>Edit Data</th>
      </thead>
      <tbody>
          {{#each coaches}}
          <tr>
              <td>{{combinedname}}</td>
              <td>{{team_id}}</td>
              <td>{{age}}</td>
              <td>{{years}}</td>
              <td><button onclick="deleteCoach({{id}})">Delete</button></td>
              <td><a href="/coaches/{{id}}"><button>Update</button></a></td>
          </tr>
          {{/each}}
      </tbody>
  </table>
</div>
