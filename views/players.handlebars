<h1>2016-2017 NBA Players</h1>
<!-- form to add new data to database -->
<form id="addplayer" action="/players" method="post">
<fieldset>
  <legend>Enter Player Info</legend>
    First Name: <input type="text" name="fname"><br>
    Last Name: <input type="text" name="lname"><br>
    Team: <select name="team_id" id="team-selector">
        {{#each teams}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Age: <input type="number" name="age"><br>
    Field Goal Percentage: <input type="number" name="fg" step=".001"><br>
    Points Per Game: <input type="number" name="ppg"><br>
    <input type="submit" value="Submit">
</fieldset>
</form><br>

<!-- table to display data from database -->
<div id="player-table">
  <table>
      <thead>
          <th>Name</th>
          <th>Team</th>
          <th>Age</th>
          <th>Field Goal Percentage</th>
          <th>Points Per Game</th>
          <th>Delete Data</th>
          <th>Edit Data</th>
      </thead>
      <tbody>
          {{#each players}}
          <tr>
              <td>{{combinedname}}</td>
              <td>{{team_id}}</td>
              <td>{{age}}</td>
              <td>{{fg}}</td>
              <td>{{ppg}}</td>
              <td><button onclick="deletePlayer({{id}})">Delete</button></td>
              <td><a href="/players/{{id}}"><button>Update</button></a></td>
          </tr>
          {{/each}}
      </tbody>
  </table></div>
